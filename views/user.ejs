<div class = "container">
	<h1>
		Users Table
	</h1>
<table id="one">
	<tr>
	<th>S.No</th>
	<th>Name</th>
    <th>Email</th>
	<th>Cuurent Credits</th>
	</tr>
	<% users.forEach(function(user){ %>
	<tr>
		<td></td>
		<td><a href= "/users/<%= user._id %>" > <%= user.name %> </a> </td>
		<td><%= user.email %></td>
		<td><%= user.Credits  %></td>
	</tr>
	 <% }) %>
</table>
</div>
